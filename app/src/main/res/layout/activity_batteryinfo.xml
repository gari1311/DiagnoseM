<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Batteryinfo"
    android:background="@drawable/bg16">

    <TextView
        android:id="@+id/tv101"
        android:layout_width="366dp"
        android:layout_height="71dp"
        android:gravity="center|left"
        android:text="Battery Info"
        android:textColor="#1F285E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="365dp"
        android:layout_height="238dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776"
        app:rowCount="11">

        <TextView
            android:id="@+id/percentageLabel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="100%"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/healthLabel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Good"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/sourceLabel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="USB"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/techLabel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/tempLabel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="5" />

        <TextView
            android:id="@+id/voltageLabel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="6" />

        <TextView
            android:id="@+id/capacityLabel"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="7" />

        <TextView
            android:id="@+id/tv102"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Battery Health"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/tv105"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/tv106"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Technology"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="4" />

        <TextView
            android:id="@+id/tv107"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Temperature"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/tv108"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Voltage"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="6" />

        <TextView
            android:id="@+id/tv109"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Capacity"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="7" />

        <TextView
            android:id="@+id/tv104"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Power Source"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:id="@+id/tv103"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Battery Level"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:id="@+id/statusLabel"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Charging"
            android:textColor="#1F285E"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="3" />
    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/batteryImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.212"
        app:srcCompat="@drawable/fullbatterylevels" />

    <Button
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Report"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.282" />

</androidx.constraintlayout.widget.ConstraintLayout>