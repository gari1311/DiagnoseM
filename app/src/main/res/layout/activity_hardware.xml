<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hardware"
    android:background="@drawable/bg4">

    <TextView
        android:id="@+id/tv18"
        android:layout_width="372dp"
        android:layout_height="75dp"
        android:gravity="center|left"
        android:text="Hardware Test"
        android:textColor="#1F285E"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="397dp"
        android:layout_height="483dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.541">

        <ImageView
            android:id="@+id/iv7"
            android:layout_width="196dp"
            android:layout_height="126dp"
            app:layout_column="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.745"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.217"
            app:layout_row="2"
            app:srcCompat="@drawable/touchscreen" />

        <TextView
            android:id="@+id/tv68"
            android:layout_width="199dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Light Sensor"
            android:textColor="#0C0505"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/tv21"
            android:layout_width="199dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Fingerprint"
            android:textColor="#090909"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:id="@+id/tv83"
            android:layout_width="199dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Multi Touch"
            android:textColor="#090909"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/tv20"
            android:layout_width="199dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Vibration"
            android:textColor="#090909"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/tv19"
            android:layout_width="199dp"
            android:layout_height="37dp"
            android:gravity="center"
            android:text="Buttons"
            android:textColor="#090909"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/iv13"
            android:layout_width="199dp"
            android:layout_height="119dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/button" />

        <ImageView
            android:id="@+id/iv14"
            android:layout_width="195dp"
            android:layout_height="119dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/vibrate" />

        <ImageView
            android:id="@+id/iv15"
            android:layout_width="199dp"
            android:layout_height="123dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/fingerprint" />

        <ImageView
            android:id="@+id/iv28"
            android:layout_width="199dp"
            android:layout_height="124dp"
            app:layout_column="0"
            app:layout_row="4"
            app:srcCompat="@drawable/lightsensor" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>